---
import Layout from "../../layouts/Layout.astro";
import Welcome from "../../components/Welcome.astro";
import "../../styles/global.css";
import { prisma } from "../../lib/prisma";

import Navbar from "../../components/navbar.astro";
import Footer from "../../components/footer.astro";

const tours = await prisma.tour.findMany();
---

<Layout>
  <main class="min-h-screen flex flex-col bg-gray-950 text-white">
    
    <Navbar />

    <section class="mt-12 w-full max-w-3xl mx-auto text-center px-4">
      <h2 class="text-2xl font-bold text-amber-300 mb-6">Tours Available</h2>

      {
        tours.length > 0 ? (
          <ul class="space-y-4">
            {tours.map((tour: { slug: string; title: string; description?: string }) => (
              <li class="bg-gray-900 p-6 rounded-xl shadow hover:bg-gray-800 transition text-left">
                <a
                  href={`/tours/${tour.slug}`}
                  class="text-lg font-semibold text-amber-400 hover:underline block"
                >
                  {tour.title}
                </a>
                {tour.description && (
                  <p class="mt-2 text-sm text-gray-400 line-clamp-2">
                    {tour.description}
                  </p>
                )}
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-gray-400">No tours available.</p>
        )
      }
    </section>

    
    <Footer />
  </main>
</Layout>
