---
import "../../../styles/global.css";
---

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-950 text-white">
  <div class="bg-gray-900 p-8 rounded-xl shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-amber-300 mb-2">Login</h1>
    <p class="text-gray-400 mb-6">Login to your account</p>

    <form method="POST" action="/api/auth/login" class="space-y-4">
      <input 
        type="text" 
        name="username" 
        placeholder="Username" 
        required
        class="w-full px-4 py-2 rounded-md bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-amber-400"
      />
      <input 
        type="password" 
        name="password" 
        placeholder="Password" 
        required
        class="w-full px-4 py-2 rounded-md bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-amber-400"
      />
      <button 
        type="submit" 
        class="w-full bg-amber-400 text-gray-900 font-semibold py-2 rounded-md hover:bg-amber-300 transition"
      >
        Login
      </button>
    </form>
  </div>
</div>
